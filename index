    <script>
        // State Management
        let currentTab = 'overview';
        let currentShape = 'square';
        let currentColor = '#1e293b';
        let chartInstance = null;

        // Navigation Logic
        function switchTab(tabId) {
            // Hide all views
            ['overview', 'studio', 'roi', 'offer'].forEach(id => {
                document.getElementById(`view-${id}`).classList.add('hidden');
            });
            // Show selected view
            document.getElementById(`view-${tabId}`).classList.remove('hidden');
            
            // Update Nav State
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            const activeNav = document.querySelector(`button[onclick="switchTab('${tabId}')"]`);
            if(activeNav) activeNav.classList.add('active');

            currentTab = tabId;

            // Trigger specific view logic
            if (tabId === 'overview') {
                setTimeout(initProblemChart, 100);
            }
            if (tabId === 'studio') {
                setTimeout(drawPuzzle, 100);
            }
        }

        // Chart.js: Problem Visualization
        function initProblemChart() {
            const ctx = document.getElementById('problemChart').getContext('2d');
            if (chartInstance) chartInstance.destroy();

            chartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Manual/Old Tools', 'KreatorKits'],
                    datasets: [{
                        label: 'Formatting Time (Minutes)',
                        data: [480, 15], // 8 hours vs 15 mins
                        backgroundColor: ['#ef4444', '#3b82f6'],
                        borderRadius: 6
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true, title: {display: true, text: 'Time Spent per Book'} }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.raw + ' Minutes';
                                }
                            }
                        }
                    }
                }
            });
        }

        // Canvas: Live Studio Simulation
        function updateSim(shape) {
            currentShape = shape;
            drawPuzzle();
        }

        function updateColor(color) {
            currentColor = color;
            drawPuzzle();
        }

        function drawPuzzle() {
            const canvas = document.getElementById('puzzleCanvas');
            const ctx = canvas.getContext('2d');
            const parent = canvas.parentElement;
            
            canvas.width = parent.clientWidth;
            canvas.height = parent.clientHeight;

            const cx = canvas.width / 2;
            const cy = canvas.height / 2;
            const size = Math.min(canvas.width, canvas.height) * 0.4;

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Shape path definition
            ctx.beginPath();
            if (currentShape === 'square') {
                ctx.rect(cx - size, cy - size, size * 2, size * 2);
            } else if (currentShape === 'circle') {
                ctx.arc(cx, cy, size, 0, Math.PI * 2);
            } else if (currentShape === 'star') {
                for (let i = 0; i < 5; i++) {
                    ctx.lineTo(Math.cos((18 + i * 72) / 180 * Math.PI) * size + cx,
                               -Math.sin((18 + i * 72) / 180 * Math.PI) * size + cy);
                    ctx.lineTo(Math.cos((54 + i * 72) / 180 * Math.PI) * (size / 2) + cx,
                               -Math.sin((54 + i * 72) / 180 * Math.PI) * (size / 2) + cy);
                }
                ctx.closePath();
            }
            
            // Draw Shape Border
            ctx.strokeStyle = currentColor;
            ctx.lineWidth = 2;
            ctx.stroke();

            // Fill with simulated letters
            ctx.fillStyle = currentColor;
            ctx.font = '14px monospace';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';

            const gridSize = 25;
            const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
            
            for (let x = 0; x < canvas.width; x += gridSize) {
                for (let y = 0; y < canvas.height; y += gridSize) {
                    if (ctx.isPointInPath(x, y)) {
                        const char = letters.charAt(Math.floor(Math.random() * letters.length));
                        ctx.fillText(char, x, y);
                    }
                }
            }
        }

        // ROI Calculator Logic
        function calculateROI() {
            const books = parseInt(document.getElementById('bookInput').value);
            const hoursPerBook = parseInt(document.getElementById('timeInput').value);
            
            document.getElementById('bookVal').textContent = books + (books === 1 ? ' Book' : ' Books');
            document.getElementById('timeVal').textContent = hoursPerBook + (hoursPerBook === 1 ? ' Hour' : ' Hours');

            // Calculation based on KreatorKits taking 15 mins (0.25 hours) vs manual time
            const manualTotal = books * hoursPerBook;
            const kreatorTotal = books * 0.25;
            const hoursSaved = Math.round(manualTotal - kreatorTotal);
            
            // Revenue calc: assume $50 profit per book lifetime (conservative KDP est) + value of time saved ($20/hr)
            // Or just extra books produced in saved time. 
            // Let's stick to the prompt's implied logic: Scale = Profit.
            // If you save X hours, you can make Y more books. 
            // Let's keep it simple: $50 profit/book * books. 
            // But the "Extra Revenue" implies value of the tool. 
            // Let's say: Time Saved * $50/hr (value of your time).
            const moneySaved = hoursSaved * 50;

            document.getElementById('savedHours').textContent = Math.max(0, hoursSaved) + " Hours";
            document.getElementById('extraRevenue').textContent = "$" + Math.max(0, moneySaved).toLocaleString();
        }

        // Initialize
        window.onload = function() {
            initProblemChart();
            // animate simple entrance
            document.getElementById('view-overview').style.opacity = 1;
        };

    </script>
</body>
</html>
